# ============================================
# INVENTORY RECONCILIATION SYSTEM CONFIGURATION
# ============================================

# -----------------------------
# Gmail Configuration
# -----------------------------
# Gmail account to monitor for emails
GMAIL_USER=your-email@gmail.com

# IMPORTANT: Use App-Specific Password, NOT your regular Gmail password
# Generate at: https://myaccount.google.com/apppasswords
# Must have 2FA enabled on your Google account
GMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Optional: Custom IMAP settings (defaults work for Gmail)
# GMAIL_IMAP_SERVER=imap.gmail.com
# GMAIL_IMAP_PORT=993

# -----------------------------
# OpenAI Configuration
# -----------------------------
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Optional: Model and temperature settings
# OPENAI_MODEL=gpt-4
# OPENAI_TEMPERATURE=0.1

# -----------------------------
# Airtable Configuration
# -----------------------------
# Personal Access Token from: https://airtable.com/account
AIRTABLE_API_KEY=pat...

# Base ID from Airtable API documentation
AIRTABLE_BASE_ID=app...

# Optional: Custom table names (defaults shown)
# AIRTABLE_PURCHASES_TABLE=Purchases
# AIRTABLE_SALES_TABLE=Sales

# -----------------------------
# Zoho Configuration
# -----------------------------
# OAuth2 Client Credentials from Zoho API Console
# Create at: https://api-console.zoho.com
ZOHO_CLIENT_ID=1000...
ZOHO_CLIENT_SECRET=...

# Generate using Zoho OAuth2 playground or Postman
# Required scope: ZohoInventory.fullaccess.all
ZOHO_REFRESH_TOKEN=1000...

# From Zoho Inventory Settings
ZOHO_ORGANIZATION_ID=...

# Optional: API Region (com, eu, in, au, jp)
# ZOHO_API_REGION=com

# Workflow Configuration
# Automatically create bills from POs to update inventory
ZOHO_AUTO_CREATE_BILL=true

# Automatically create invoices from SOs to commit sales
ZOHO_AUTO_CREATE_INVOICE=true

# Automatically ship sales orders to reduce inventory
ZOHO_AUTO_SHIP_SALES=true

# Use Zoho's native WAC calculation (recommended)
ZOHO_USE_NATIVE_WAC=true

# Tax Configuration
# Default tax ID from Zoho (get from Settings → Taxes)
# ZOHO_DEFAULT_TAX_ID=...

# Whether prices include tax
# ZOHO_TAX_INCLUSIVE=false

# -----------------------------
# Discord Configuration
# -----------------------------
# Webhook URL from Discord Server Settings → Integrations
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Optional: Retry failed Discord notifications
# DISCORD_RETRY_ON_FAIL=true

# -----------------------------
# Application Configuration
# -----------------------------
# Polling interval in seconds (default: 300 = 5 minutes)
POLL_INTERVAL=300

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Maximum retries for failed API calls
# MAX_RETRIES=3

# Delay between retries in seconds
# RETRY_DELAY=5

# Number of emails to process in one batch
# EMAIL_BATCH_SIZE=10

# Enable dry run mode (no actual API calls)
# ENABLE_DRY_RUN=false

# Test connections on startup
# ENABLE_CONNECTION_TEST=false

# -----------------------------
# Secret Manager Configuration (Optional)
# -----------------------------
# Backend for secret management: env, aws, azure, google
# SECRET_BACKEND=env

# AWS Secrets Manager (if SECRET_BACKEND=aws)
# AWS_SECRET_NAME=inventory-reconciliation-secrets
# AWS_REGION=us-east-1

# Azure Key Vault (if SECRET_BACKEND=azure)
# AZURE_VAULT_URL=https://your-vault.vault.azure.net/

# Google Secret Manager (if SECRET_BACKEND=google)
# GCP_PROJECT_ID=your-project-id

# ============================================
# SECURITY NOTES
# ============================================
# 1. NEVER commit this file with actual values to version control
# 2. Use app-specific passwords for Gmail, not regular passwords
# 3. Rotate API keys regularly
# 4. Consider using a secret manager in production
# 5. Enable 2FA on all service accounts
# 6. Monitor Discord notifications for suspicious activity
# ============================================